{
    "name": "yaghn",
    "version": "0.2.0",
    "description": "Yet Another GitHub Notifier. (Pronounced 'yawn'.)",
    "background": {
        "persistent": false,
        "scripts": ["bg.js"]
    },
    "permissions": [
        "alarms",
        "https://github.com/",
        "tabs"
    ],
    "browser_action": {
        "default_title": "yaghn",
        "default_icon": {
            "19": "yaghn-default-19x19.png",
            "38": "yaghn-default-19x19@2x.png"
        }
    },

    "manifest_version": 2
}
